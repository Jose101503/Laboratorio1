else
{
    <input type="number" placeholder="Escribe la segunda nota de laboratorio" name="DatoN3" value="@ViewBag.DatoN3V" class="form-control" />}

        <label> DATO 4</label>

        @if (ViewBag.DatoN4V == 0)
        {

    <input type="number" placeholder="Escribe la segunda nota del parcial" name="DatoN4" class="form-control" min="0" max="10" /> }
else
{
    <input type="number" placeholder="Escribe la segunda nota del parcial" name="DatoN4" value="@ViewBag.DatoN4V" class="form-control" />}

