        @if (ViewBag.DatoN1V == 0)
        {

    <input type="number" placeholder="Escribe la primer nota de laboratorio" name="DatoN1" /> }
else
{
    <input type="number" placeholder="Escribe la primer nota de laboratorio" name="DatoN1" value="@ViewBag.DatoN1V" class="form-control" />}



