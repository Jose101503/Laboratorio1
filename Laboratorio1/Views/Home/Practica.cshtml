
@{ ViewData["Title"] = "Programa para calcular porcentaje final de su materia";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Calcular Promedio</h1>


<form asp-controller="Home" asp-action="Practica">

    <div class="card">
