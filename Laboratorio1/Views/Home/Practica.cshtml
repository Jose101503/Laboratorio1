        @if (ViewBag.DatoN2V == 0)
        {

    <input type="number" placeholder="Escribe la primer nota del parcial" name="DatoN2" class="form-control" min="0" max="10" /> }
else
{
    <input type="number" placeholder="Escribe la primer nota del parcial" name="DatoN2" value="@ViewBag.DatoN2V" class="form-control" />}


